{
  "manifest_version": 3,
  "name": "Viceroy",
  "version": "1.0",
  "description": "A Reader View extension",
  "default_locale": "en",
  "icons": {
    "16": "icons/sitting.png",
    "48": "icons/laying.png",
    "128": "icons/dog.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/sitting.png",
      "48": "icons/laying.png",
      "128": "icons/dog.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
