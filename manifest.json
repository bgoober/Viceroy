{
  "manifest_version": 3,
  "name": "Viceroy",
  "version": "1.0",
  "description": "A Reader View extension",
  "icons": {
    "16": "icons/V.png",
    "48": "icons/V.png",
    "128": "icons/V.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "debugger"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B"
      },
      "description": "Toggle reader view"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self';"
  }
}